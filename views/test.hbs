<form method="post" action="/test/variables">
    <select name="generoUno">
        <option value="Adventure">Adventure</option>
        <option value="Animation">Animation</option>
        <option value="Biography">Biography</option>
        <option value="Children">Children</option>
        <option value="Comedy">Comedy</option>
        <option value="Crime">Crime</option>
        <option value="Documentary">Documentary</option>
        <option value="Drama">Drama</option>
        <option value="Family">Family</option>
        <option value="Fantasy">Fantasy</option>
        <option value="Film-Noir">Film-Noir</option>
        <option value="History">History</option>
        <option value="Horror">Horror</option>
        <option value="Musical">Musical</option>
        <option value="Mystery">Mystery</option>
        <option value="Romance">Romance</option>
        <option value="Science-Fiction">Science-Fiction</option>
        <option value="Sport">Sport</option>
        <option value="Suspense">Suspense</option>
        <option value="Thriller">Thriller</option>
        <option value="War">War</option>
        <option value="Western">Western</option>
    </select>
    <input type="text" placeholder="Director" name="directorUno">
    <select name="duracionUno">
        <option value="30-70">30 a 70 min</option>
        <option value="70-90">70 a 90 min</option>
        <option value="90-120">90 a 120 min</option>
        <option value="120-200">120 a 200 min</option>
    </select>
    <select name="ratingUno">
        <option value="G">G - Apta para todo publico</option>
        <option value="PG">PG - No apta para menores de 10 años</option>
        <option value="PG-13">PG-13 - No apta para menores de 13 años</option>
        <option value="R">R - No apta para menores de 17 años</option>
        <option value="NR">NR - Sin Calificar (muchas peliculas aun no han sido clasificadas)</option>
    </select>
    <select name="anoUno">
        <option value="1940-1960">40'-60'</option>
        <option value="1961-1980">61'-80'</option>
        <option value="1981-2000">81'-00'</option>
        <option value="2001-2005">2001-2005</option>
        <option value="2006-2010">2006-2010</option>
        <option value="2011-2015">2011-2015</option>
        <option value="2016-2017">2016-2017</option>
    </select>
    <button type="submit">Enviar</button>
</form>